<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Main">

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUESS THE NUMBER"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
         />


    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtTxtNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtTxtNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtTxtNum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="3"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtTxtNum4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="4"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtTxtNum5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="5"
            android:inputType="textPersonName" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Serie"
        android:textSize="18dp" />

    <RadioGroup
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:id="@+id/rdGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/rdBtnAlgebraica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Algebraica" />/>

        <RadioButton

            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/rdBtnAritmetica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Aritmetica" />/>


    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="Numero faltante:"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/edtTxtRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Inserta Numero"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/btnVerificar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick2"
        android:text="VERIFICAR" />

    <TextView
        android:id="@+id/txtVwResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTADO"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

</LinearLayout>